    <!-- Custom JavaScript -->
    <script>
        $(document).ready(function() {
            // Auto-close alerts after 5 seconds
            setTimeout(function() {
                $('.alert.alert-success, .alert.alert-info').fadeOut('slow');
            }, 5000);

            // Confirm delete actions
            $('a[href*="/Delete/"], button[type="submit"][formaction*="/Delete/"]').click(function(e) {
                if (!confirm('Bạn có chắc chắn muốn xóa không?')) {
                    e.preventDefault();
                }
            });

            // Set active nav link
            var currentUrl = window.location.pathname;
            $('.nav-link').each(function() {
                if ($(this).attr('href') === currentUrl) {
                    $(this).addClass('active');
                }
            });
        });

        // AJAX function to load news by category
        function loadNewsByCategory(categoryId) {
            $.get('@Url.Action("GetNewsByCategory", "News")', { categoryId: categoryId }, function(data) {
                if (data.success) {
                    // Handle success - you can implement this based on your needs
                    console.log('Loaded ' + data.totalCount + ' news items');
                }
            });
        }
