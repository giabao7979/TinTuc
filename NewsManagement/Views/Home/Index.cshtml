@model List<NewsManagement.Models.News>
@{
    ViewBag.Title = "Trang chủ";
    var categories = ViewBag.Categories as List<NewsManagement.Models.Category>;
    var selectedCategory = ViewBag.SelectedCategory as NewsManagement.Models.Category;
    var searchTerm = ViewBag.SearchTerm as string;
}
<link rel="stylesheet" href="~/Content/site.css" />
<link rel="stylesheet" href="~/Content/layout.css" />
<link rel="stylesheet" href="~/Content/home-page.css" />
<link rel="stylesheet" href="~/Content/creat.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container">
    <div class="row">
        <!-- Cột danh mục -->
        <div class="col-md-4">
            <div class="card categories-card">
                <div class="card-header">
                    <h4>Danh sách danh mục</h4>
                </div>
                <div class="card-body categories-menu">
                    @foreach (var cat in categories)
                    {
                        <div class="category-item">
                            <a href="@Url.Action("Index", new { categoryId = cat.Id })" class="category-link">
                                <div class="category-content">
                                    <div class="category-name">
                                        <span class="category-icon">📁</span> @cat.Name
                                    </div>
                                    <span class="news-count">@cat.News.Count</span>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Cột nội dung chính -->
        <div class="col-md-8">
            <div class="search-card card mb-4">
                <div class="card-body">
                    <form method="get" action="@Url.Action("Index")" class="search-input-group d-flex">
                        <input type="text" name="term" placeholder="Tìm kiếm..." class="form-control me-2" />
                        <button type="submit" class="btn btn-primary">Tìm</button>
                    </form>
                </div>
            </div>

            <div class="content-card card">
                <div class="card-header">
                    @if (!string.IsNullOrEmpty(searchTerm))
                    {
                        <h4>Kết quả tìm kiếm cho: "@searchTerm"</h4>
                    }
                    else if (selectedCategory != null)
                    {
                        <h4>Tin tức trong danh mục: @selectedCategory.Name</h4>
                    }
                    else
                    {
                        <h4>Tin tức mới nhất</h4>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        foreach (var news in Model)
                        {
                            <div class="news-card p-3 mb-3">
                                <a href="@Url.Action("Details", "News", new { id = news.Id })" class="news-title">@news.Title</a>
                                <p class="news-summary">
                                    @(news.Summary?.Substring(0, Math.Min(200, news.Summary.Length)))
                                </p>
                                <div class="news-meta">
                                    <span><i class="bi bi-clock"></i> @news.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Không có tin tức nào được tìm thấy.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
