@model List<NewsManagement.Controllers.CategoryViewModel>
@{
    ViewBag.Title = "Quản lý danh mục";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>
                        Quản lý danh mục
                        @if (ViewBag.ParentCategory != null)
                        {
                            var parent = ViewBag.ParentCategory as NewsManagement.Models.Category;
                            <text> - @parent.Name</text>
                        }
                    </h3>
                    <div>
                        <a href="@Url.Action("Create", new { parentId = ViewBag.ParentId })" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Thêm danh mục
                        </a>
                        @if (ViewBag.ParentId != null)
                        {
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fa fa-arrow-up"></i> Về danh mục gốc
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="alert alert-info mb-0">
                            Hiển thị @Model.Count trong tổng số @(ViewBag.TotalCount ?? 0) danh mục
                            (Trang @(ViewBag.CurrentPage ?? 1)/@(ViewBag.TotalPages ?? 1))
                        </div>

                        <div class="form-group mb-0">
                            <label for="pageSize" class="mr-2">Số lượng:</label>
                            <select id="pageSize" class="form-control" style="width: auto; display: inline-block;" onchange="changePageSize()">
                                <option value="20" @(ViewBag.PageSize != null && (int)ViewBag.PageSize == 20 ? "selected" : "")>20</option>
                                <option value="50" @(ViewBag.PageSize != null && (int)ViewBag.PageSize == 50 ? "selected" : "")>50</option>
                                <option value="100" @(ViewBag.PageSize != null && (int)ViewBag.PageSize == 100 ? "selected" : "")>100</option>
                            </select>
                        </div>
                    </div>

                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Tên danh mục</th>
                                        <th>Mô tả</th>
                                        <th>Tin tức trực tiếp</th>
                                        <th>Tổng tin tức</th>
                                        <th>Cấp độ</th>
                                        <th>Thứ tự</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Category.Name</strong>
                                                @if (item.HasChildren)
                                                {
                                                    <br />
                                                    <a href="@Url.Action("Index", new { parentId = item.Category.Id })" class="btn btn-sm btn-outline-info">
                                                        <i class="fa fa-folder-open"></i> Xem danh mục con
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Category.Description))
                                                {
                                                    @(item.Category.Description.Length > 50
                                                        ? item.Category.Description.Substring(0, 50) + "..."
                                                        : item.Category.Description)
                                                }
                                            </td>
                                            <td><span class="badge badge-primary">@item.NewsCount tin</span></td>
                                            <td><span class="badge badge-success">@item.TotalNewsCount tin</span></td>
                                            <td><span class="badge badge-secondary">Cấp @item.Level</span></td>
                                            <td>@item.Category.Ordering</td>
                                            <td>
                                                @if (item.Category.Status)
                                                {
                                                    <span class="badge badge-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Tạm dừng</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Create", new { parentId = item.Category.Id })" class="btn btn-sm btn-success" title="Thêm danh mục con"><i class="fa fa-plus"></i></a>
                                                    <a href="@Url.Action("Edit", new { id = item.Category.Id })" class="btn btn-sm btn-warning" title="Sửa"><i class="fa fa-edit"></i></a>
                                                    <a href="@Url.Action("NewsByCategory", new { categoryId = item.Category.Id })" class="btn btn-sm btn-info" title="Xem tin tức"><i class="fa fa-newspaper"></i></a>
                                                    <a href="@Url.Action("Delete", new { id = item.Category.Id })" class="btn btn-sm btn-danger" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?')"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @* PHÂN TRANG *@
                        @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
                        {
                            int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
                            int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
                            int startPage = Math.Max(1, currentPage - 2);
                            int endPage = Math.Min(totalPages, currentPage + 2);
                            <nav aria-label="Phân trang danh mục" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item"><a class="page-link" href="@GetPageUrl(1)">Đầu</a></li>
                                        <li class="page-item"><a class="page-link" href="@GetPageUrl(currentPage - 1)">Trước</a></li>
                                    }
                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="@GetPageUrl(i)">@i</a>
                                        </li>
                                    }
                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item"><a class="page-link" href="@GetPageUrl(currentPage + 1)">Sau</a></li>
                                        <li class="page-item"><a class="page-link" href="@GetPageUrl(totalPages)">Cuối</a></li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <h4>Không có danh mục</h4>
                            <p>
                                @(ViewBag.ParentId != null
                                    ? "Danh mục này chưa có danh mục con nào."
                                    : "Chưa có danh mục nào trong hệ thống.")
                            </p>
                            <a href="@Url.Action("Create", new { parentId = ViewBag.ParentId })" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Thêm danh mục đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetPageUrl(int page)
    {
        var routeValues = new System.Web.Routing.RouteValueDictionary();
        routeValues.Add("page", page);
        routeValues.Add("pageSize", ViewBag.PageSize);
        if (ViewBag.ParentId != null)
        {
            routeValues.Add("parentId", ViewBag.ParentId);
        }
        return Url.Action("Index", routeValues);
    }
}

<script>
function changePageSize() {
    var pageSize = document.getElementById('pageSize').value;
    var url = '@Url.Action("Index")' + '?pageSize=' + pageSize;
    @if (ViewBag.ParentId != null)
    {
        <text>url += '&parentId=@ViewBag.ParentId';</text>
    }
    window.location.href = url;
}

$(document).ready(function () {
    setTimeout(function () {
        $('.alert.alert-success, .alert.alert-info').fadeOut('slow');
    }, 5000);
});
</script>
