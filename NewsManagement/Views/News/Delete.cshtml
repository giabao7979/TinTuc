@model NewsManagement.Models.News
@{
    ViewBag.Title = "Xóa tin tức";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>Xác nhận xóa tin tức</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa tin tức này không? Thao tác này không thể hoàn tác.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Tiêu đề:</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Title</strong>
                        </dd>

                        <dt class="col-sm-3">Trích ngắn:</dt>
                        <dd class="col-sm-9">@Model.Summary</dd>

                        <dt class="col-sm-3">Ngày tạo:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Danh mục:</dt>
                        <dd class="col-sm-9">
                            @foreach (var category in Model.Categories)
                            {
                                <span class="badge badge-secondary mr-1">@category.Name</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Status)
                            {
                                <span class="badge badge-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Tạm dừng</span>
                            }
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        <div class="mt-3">
                            <strong>Nội dung (300 ký tự đầu):</strong>
                            <div class="border p-3 mt-2" style="background-color: #f8f9fa;">
                                @if (Model.Content.Length > 300)
                                {
                                    @(Model.Content.Substring(0, 300) + "...")
                                }
                                else
                                {
                                    @Model.Content
                                }
                            </div>
                        </div>
                    }

                    @using (Html.BeginForm("Delete", "News", FormMethod.Post, new { @class = "mt-4" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Xóa tin tức
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Hủy
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
