@model List<NewsManagement.Models.News>
@{
    ViewBag.Title = "Quản lý tin tức";
    ViewBag.Subtitle = "Danh sách tất cả tin tức";
}
<link href="~/Content/css/site.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/css/bootstrap.min.css" rel="stylesheet" />
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Quản lý tin tức</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">Thêm tin tức</a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-12">
                            @using (Html.BeginForm("Index", "News", FormMethod.Get))
                            {
                                <div class="form-group">
                                    <label>Danh mục:</label>
                                    @Html.DropDownList("categoryId", ViewBag.Categories as SelectList, "-- Tất cả danh mục --", new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Tìm kiếm:</label>
                                    @Html.TextBox("search", ViewBag.SearchTerm as string, new { @class = "form-control", placeholder = "Nhập từ khóa..." })
                                </div>

                                <button type="submit" class="btn btn-secondary">Lọc</button>

                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Xóa bộ lọc</a>
                            }
                        </div>
                    </div>

                    <div class="alert alert-info">
                        Tìm thấy <strong>@ViewBag.TotalCount</strong> tin tức
                    </div>

                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Trích ngắn</th>
                                        <th>Danh mục</th>
                                        <th>Ngày tạo</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var news in Model)
                                    {
                                        <tr>
                                            <td>@news.Title</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(news.Summary))
                                                {
                                                    if (news.Summary.Length > 80)
                                                    {
                                                        @(news.Summary.Substring(0, 80) + "...")
                                                    }
                                                    else
                                                    {
                                                        @news.Summary
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (news.Categories != null)
                                                {
                                                    @(string.Join(", ", news.Categories.Select(c => c.Name)))
                                                }
                                            </td>
                                            <td>@news.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (news.Status)
                                                {
                                                    <span class="badge badge-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Tạm dừng</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = news.Id })" class="btn btn-sm btn-info">Xem</a>
                                                <a href="@Url.Action("Edit", new { id = news.Id })" class="btn btn-sm btn-warning">Sửa</a>
                                                <a href="@Url.Action("Delete", new { id = news.Id })" class="btn btn-sm btn-danger">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h4>Không có tin tức</h4>
                            <p>Không tìm thấy tin tức nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>