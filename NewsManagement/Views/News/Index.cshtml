@model List<NewsManagement.Models.News>
@{
    ViewBag.Title = "Quản lý tin tức";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Quản lý tin tức</h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Thêm tin tức
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    <!-- Bộ lọc -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            @using (Html.BeginForm("Index", "News", FormMethod.Get, new { @class = "form-inline" }))
                            {
                                <div class="form-group mr-3">
                                    <label for="categoryId" class="mr-2">Danh mục:</label>
                                    @Html.DropDownList("categoryId", ViewBag.Categories as SelectList, "-- Tất cả danh mục --", new { @class = "form-control" })
                                </div>

                                <div class="form-group mr-3">
                                    <label for="search" class="mr-2">Tìm kiếm:</label>
                                    @Html.TextBox("search", ViewBag.SearchTerm as string, new { @class = "form-control", placeholder = "Nhập từ khóa..." })
                                </div>

                                <button type="submit" class="btn btn-secondary">
                                    <i class="fa fa-search"></i> Lọc
                                </button>

                                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || Request.QueryString["categoryId"] != null)
                                {
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ml-2">
                                        <i class="fa fa-times"></i> Xóa bộ lọc
                                    </a>
                                }
                            }
                        </div>
                    </div>

                    <!-- Thông tin kết quả -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                Tìm thấy <strong>@ViewBag.TotalCount</strong> tin tức
                                @if (ViewBag.SelectedCategory != null)
                                {
                                    <span> trong danh mục <strong>@((ViewBag.SelectedCategory as NewsManagement.Models.Category).Name)</strong></span>
                                }
                                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                {
                                    <span> với từ khóa <strong>"@ViewBag.SearchTerm"</strong></span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Trích ngắn</th>
                                        <th>Danh mục</th>
                                        <th>Ngày tạo</th>
                                        <th>Thứ tự</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var news in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@news.Title</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(news.Summary))
                                                {
                                                    @(news.Summary.Length > 80 ? news.Summary.Substring(0, 80) + "..." : news.Summary)
                                                }
                                            </td>
                                            <td>
                                                @foreach (var category in news.Categories)
                                                {
                                                    <span class="badge badge-secondary mr-1">@category.Name</span>
                                                }
                                            </td>
                                            <td>@news.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@news.Ordering</td>
                                            <td>
                                                @if (news.Status)
                                                {
                                                    <span class="badge badge-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Tạm dừng</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = news.Id })"
                                                       class="btn btn-sm btn-info" title="Xem chi tiết">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = news.Id })"
                                                       class="btn btn-sm btn-warning" title="Sửa">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = news.Id })"
                                                       class="btn btn-sm btn-danger" title="Xóa">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Phân trang -->
                        @if ((int)ViewBag.TotalPages > 1)
                        {
                            <nav aria-label="Phân trang tin tức">
                                <ul class="pagination justify-content-center">
                                    @if ((int)ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new {
                                                page = (int)ViewBag.CurrentPage - 1,
                                                categoryId = Request.QueryString["categoryId"],
                                                search = Request.QueryString["search"]
                                            })">Trước</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, (int)ViewBag.CurrentPage - 2); i <= Math.Min((int)ViewBag.TotalPages, (int)ViewBag.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new {
                                                page = i,
                                                categoryId = Request.QueryString["categoryId"],
                                                search = Request.QueryString["search"]
                                            })">@i</a>
                                        </li>
                                    }

                                    @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new {
                                                page = (int)ViewBag.CurrentPage + 1,
                                                categoryId = Request.QueryString["categoryId"],
                                                search = Request.QueryString["search"]
                                            })">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h4>Không có tin tức</h4>
                            <p>Không tìm thấy tin tức nào với điều kiện lọc hiện tại.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
